@model WebAguasPL.Models.LeituraViewModel

<div class="fullBodyContainer">
    <div>
        <br />
        <div class="headerContainer">
            <h1 class="text-center">Add Reading</h1>
        </div>
        <br />
    </div>


    <form asp-action="AddLeitura" style="text-align:center;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ContratoID" />

        <div class="form-group">
            <label asp-for="Valor" class="control-label"></label>
            <input asp-for="Valor" class="form-control text-center" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataLeitura" class="control-label"></label>
            @Html.TextBoxFor(x => x.DataLeitura, "{0:yyyy-MM-dd}", new { @class = "form-control text-center", @type = "date"})
            <span asp-validation-for="DataLeitura" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div>
            <p>
                <flash dismissable="true" />
            </p>
        </div>
    </form>


    <div align="right">
        <a asp-action="Index">Back to List</a>
    </div>

</div>